<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <SplitPane dividerPositions="0.75" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
      <items>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
          <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
          </padding>
          <children>
            <TextArea fx:id="txtAreaGroupChat" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="300.0" HBox.hgrow="ALWAYS" />
          </children>
        </HBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
          <children>
            <ListView fx:id="listViewGroupMembers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="100.0" VBox.vgrow="ALWAYS" />
          </children>
          <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
          </padding>
        </VBox>
      </items>
    </SplitPane>
  </center>
  <bottom>
    <HBox alignment="CENTER_RIGHT" spacing="8.0" BorderPane.alignment="CENTER">
      <children>
        <TextField fx:id="fieldGroupDraftMessage" maxWidth="1.7976931348623157E308" onAction="#btnSendGroupMessageAction" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnSendGroupMessage" mnemonicParsing="false" onAction="#btnSendGroupMessageAction" text="Send" />
      </children>
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
    </HBox>
  </bottom>
</BorderPane>
